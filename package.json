{
  "private": true,
  "name": "alexsinfarosa.com",
  "description": "Personal website of Alex Sinfarosa, Front End Engineer",
  "version": "0.0.1",
  "license": "",
  "scripts": {
    "clean": "rimraf .cache ./build ./public/build",
    "build": "npm run build:production",
    "dev": "cross-env NODE_ENV=development run-p dev:*",
    "postinstall": "remix setup cloudflare-pages",
    "dev:remix": "remix watch",
    "dev:wrangler": "wrangler pages dev ./public --watch ./build",
    "start": "npm run dev:wrangler",
    "dev:css": "tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css --watch",
    "build:fonts": "mkdir -p ./public/fonts && cp -r ./node_modules/@fontsource/inter ./public/fonts",
    "prebuild:css": "npm run build:fonts",
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css",
    "build:remix": "remix build",
    "build:production": "cross-env NODE_ENV=production npm run build:css -- --minify && npm run build:remix",
    "build:development": "cross-env NODE_ENV=development npm run build:css && npm run build:remix"
  },
  "dependencies": {
    "@fontsource/inter": "^4.5.1",
    "@headlessui/react": "^1.4.3",
    "@heroicons/react": "^1.0.5",
    "@remix-run/cloudflare-pages": "^1.1.3",
    "@remix-run/react": "^1.1.3",
    "clsx": "^1.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3",
    "wrangler": "^0.0.13"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.3.1",
    "@remix-run/dev": "^1.1.3",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/tailwindcss": "^3.0.3",
    "cross-env": "^7.0.3",
    "esbuild": "0.14.14",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.4",
    "tailwindcss": "^3.0.16",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "main": "dist/worker.js"
}
